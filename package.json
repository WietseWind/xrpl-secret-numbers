{
  "name": "xrpl-secret-numbers",
  "version": "0.3.4",
  "description": "Generate XRPL Accounts with a number-based secret: 8 chunks of 6 digits",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build",
    "clean": "rm -rf dist",
    "build": "tsc && browserify -r .:xrpl-secret-numbers -o dist/browserified.js",
    "test": "jest --verbose",
    "lint": "tslint -p ./"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.js.map",
    "dist/**/*.d.ts"
  ],
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@types/brorand": "^1.0.30",
    "brorand": "^1.1.0",
    "ripple-keypairs": "^1.1.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.32",
    "browserify": "^17.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.3",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "4.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/WietseWind/xrpl-secret-numbers.git"
  },
  "bugs": {
    "url": "https://github.com/WietseWind/xrpl-secret-numbers/issues"
  },
  "homepage": "https://github.com/WietseWind/xrpl-secret-numbers#readme",
  "license": "MIT",
  "readmeFilename": "README.md",
  "keywords": [
    "xrp",
    "xrpl-ledger",
    "multi sign",
    "sign"
  ]
}
